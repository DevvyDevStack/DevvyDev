rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read access for website assets
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User uploads (profile pictures, documents)
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tour images for Winchester Jaunts
    match /tours/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Treatment images for esthetician site
    match /treatments/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
